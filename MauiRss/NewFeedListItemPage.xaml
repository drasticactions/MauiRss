<?xml version="1.0" encoding="utf-8" ?>
<local:BasePage x:Class="MauiRss.NewFeedListItemPage"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:resources="clr-namespace:MauiRss.Translations"
             xmlns:local="clr-namespace:MauiRss"
             Title="{Binding Title}">
    <Grid RowSpacing="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <VerticalStackLayout Margin="10" Spacing="5">
            <Label Text="{x:Static resources:Common.FeedUriTitle}" VerticalOptions="Center"></Label>
            <Entry Text="{Binding FeedUri}" />
        </VerticalStackLayout>
        <Button Grid.Row="1" 
                    Margin="10"
                    Command="{Binding AddNewFeedListItemAsyncCommand}" 
                    Text="{x:Static resources:Common.AddNewFeedListItemButton}"/>
    </Grid>
</local:BasePage>